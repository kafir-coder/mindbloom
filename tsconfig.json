{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,  
    "strictPropertyInitialization": false,                            
    "rootDir": "./src",                                  
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "resolveJsonModule": true                             
  }
}
